@model Final.Models.RoleCreateViewModel
@{
    ViewData["Title"] = "Create Role";
}

<!-- Include animate.css via CDN -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>

<div class="container mt-5 animate__animated animate__fadeIn">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0"><i class="fas fa-plus-circle"></i> Create Role</h3>
        </div>
        <div class="card-body">
            <form asp-action="RoleCreate" method="post">
                <div class="form-group">
                    <label asp-for="RoleName" class="font-weight-bold"></label>
                    <input asp-for="RoleName" class="form-control" placeholder="Enter role name" />
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="CompanyId" class="font-weight-bold">Select Company</label>
                    <select asp-for="CompanyId" class="form-control" asp-items="Model.Companies">
                        <option value="">-- Select Company --</option>
                    </select>
                    <span asp-validation-for="CompanyId" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label class="font-weight-bold">Assign Users (optional)</label>
                    <select asp-for="SelectedUserIds" class="form-control" asp-items="Model.Users" multiple="multiple">
                    </select>
                </div>
                <button type="submit" class="btn btn-success mt-4">
                    <i class="fas fa-check"></i> Create Role
                </button>
                <a style="float: right;" asp-controller="Home" asp-action="Account" class="btn btn-outline-info mt-4"><i class="fa-solid fa-arrow-left"></i> Return</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
