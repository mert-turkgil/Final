@using Final.Services
@inject  LanguageService _localization
@inject Microsoft.AspNetCore.Identity.SignInManager<Final.Identity.User> SignInManager
@inject Microsoft.AspNetCore.Identity.UserManager<Final.Identity.User> UserManager

<footer style="margin-bottom: 0px; margin-top: 30rem;" class="nav bg-light text-dark py-4">
    <div style="z-index: 3;" class="container-xxl text-center">
        @if (User.Identity != null && User.Identity.IsAuthenticated)
        {
        var IsSomethingWrong = _localization.GetKey("IsSomethingWrong").Value;
        var ContactSupport = _localization.GetKey("ContactSupport").Value;
        var SupportPhone = _localization.GetKey("SupportPhone").Value;
        var SupportEmail = _localization.GetKey("SupportEmail").Value;
        var WantToSignUp = _localization.GetKey("WantToSignUp").Value;
        var ContactForInfo = _localization.GetKey("ContactForInfo").Value;
        var EmailForInfo = _localization.GetKey("EmailForInfo").Value;
          <div class="row">
            <div class="col-md-5 offset-md-1 mb-3 mx-auto border shadow-sm">
                <h5>@WantToSignUp</h5>
                <p> @ContactSupport</p>
                    <hr/>
                    <div class="d-flex flex-column flex-sm-row w-100 gap-2">
                        <table class="table table-light">
                            <thead>
                                <tr>
                                <th scope="col">@ContactForInfo</th>
                                <th scope="col">@EmailForInfo</th>
                                </tr>
                            </thead>
                        <tbody>
                            <tr>
                            <td scope="row">@SupportPhone :</td>
                            <td colspan="2">+90 555 555 55 55</td>
                            </tr>
                            <tr>
                            <td scope="row">@SupportEmail :</td>
                            <td colspan="2">support@mysite.com</td>
                            </tr>
                        </tbody>
                        </table>
                    </div>    
                </div>
            </div>
            <div class="d-flex flex-column flex-sm-row justify-content-between py-4 my-4 border-top">
                <p>© 2022 Company, Inc. All rights reserved.</p>
                    <ul class="list-unstyled d-flex">
                        <li class="ms-3"><i class="fa-brands fa-instagram fa-2xl"></i></li>
                    </ul>
            </div>
        }
        else
        {
        var IsSomethingWrong = _localization.GetKey("IsSomethingWrong").Value;
        var ContactSupport = _localization.GetKey("ContactSupport").Value;
        var SupportPhone = _localization.GetKey("SupportPhone").Value;
        var SupportEmail = _localization.GetKey("SupportEmail").Value;
        var WantToSignUp = _localization.GetKey("WantToSignUp").Value;
        var ContactForInfo = _localization.GetKey("ContactForInfo").Value;
        var EmailForInfo = _localization.GetKey("EmailForInfo").Value;
        <div class="row">
            <div class="col-md-5 offset-md-1 mb-3 mx-auto  border shadow-sm">
                <h5>@IsSomethingWrong</h5>
                <p> @ContactSupport</p>
                <hr/>
                <div class="d-flex flex-column flex-sm-row w-100 gap-2">
                    <table class="table table-light">
                        <thead>
                            <tr>
                            <th scope="col">@ContactForInfo</th>
                            <th scope="col">@EmailForInfo</th>
                            </tr>
                        </thead>
                    <tbody>
                        <tr>
                        <td scope="row">@SupportPhone :</td>
                        <td colspan="2">+90 555 555 55 55</td>
                        </tr>
                        <tr>
                        <td scope="row">@SupportEmail :</td>
                        <td colspan="2">support@mysite.com</td>
                        </tr>
                    </tbody>
                    </table>
                </div>    
            </div>
        </div>
            <div class="d-flex flex-column flex-sm-row justify-content-between py-4 my-4 border-top">
                <p>© 2022 Company, Inc. All rights reserved.</p>
                    <ul class="list-unstyled d-flex">
                        <li class="ms-3"><i class="fa-brands fa-instagram fa-2xl"></i></li>
                    </ul>
            </div>
        }
    </div>
</footer>
