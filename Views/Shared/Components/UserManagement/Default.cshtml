@model IEnumerable<Final.Identity.User>

<div class="user-management mt-4">
    <div class="nav table-responsive mb-3">
        <a class="btn btn-outline-success nav-item m-auto w-100" 
           asp-controller="Home" 
           asp-action="UserCreate">
            Create user
        </a>
    </div>

    <table id="usersTable" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
        <thead>
            <tr>
                <th data-priority="3">ID</th>
                <th data-priority="1">Email</th>
                <th data-priority="1">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Email</td>
                    <td>
                        <a asp-action="UserEdit" asp-controller="Home" 
                           asp-route-id="@user.Id" 
                           class="btn btn-warning btn-sm">
                            <i class="fa fa-edit"></i> Edit
                        </a>
                        <form asp-action="UserDelete" 
                              asp-controller="Home" 
                              method="post" 
                              style="display: inline-block;" 
                              onsubmit="return confirm('Are you sure you want to delete this user?');">
                            <input type="hidden" name="id" value="@user.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">
                                <i class="fa fa-trash"></i> Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
