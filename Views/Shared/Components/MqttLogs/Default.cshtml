@model List<Final.Models.MqttLog>

<section id="MqttLogs">
    <div class="card shadow mt-4"> 
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <h3 class="card-title mb-0">
                <i class="fas fa-terminal"></i> MQTT Logs
            </h3>
            <!-- Search input -->
            <input type="text" id="logSearch" placeholder="Search logs..." style="padding: 5px;" />
        </div>

        <div class="card-body log-container" style="background-color: #2b2b2b; color: #eee; font-family: monospace;">
            <div id="logMessages" style="max-height: 300px; overflow-y: auto;">
                @if (Model != null && Model.Any())
                {
                    @foreach (var log in Model)
                    {
                        <div class="log-entry">@Html.Raw(log.Message)</div>
                    }
                }
                else
                {
                    <div>No logs available.</div>
                }
            </div>
        </div>
    </div>

    <!-- Publish MQTT Message Form -->
    <div class="card shadow mt-4">
        <div class="card-header bg-dark text-white">
            <h3 class="card-title mb-0">
                <i class="fas fa-paper-plane"></i> Publish MQTT Message
            </h3>
        </div>
        <div class="card-body" style="background-color: #f5f5f5;">
            <div class="form-group">
                <label for="txtTopic">Topic</label>
                <input type="text" id="txtTopic" class="form-control" placeholder="e.g. ciceklisogukhavadeposu/control_room/room1/status" />
            </div>
            <div class="form-group">
                <label for="txtPayload">Payload</label>
                <input type="text" id="txtPayload" class="form-control" placeholder="Enter message payload" />
            </div>
            <button class="btn btn-primary" id="btnPublish">Publish</button>
        </div>
    </div>
</section>


