@model Final.Models.DashboardViewModel

<div class="dashboard">
    <h2>Dashboard</h2>

    <section>
        <h3>Companies</h3>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Base Topic</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var company in Model.Companies)
                {
                    <tr>
                        <td>@company.Name</td>
                        <td>@company.BaseTopic</td>
                    </tr>
                }
            </tbody>
        </table>
    </section>

    <section>
        <h3>MQTT Tools</h3>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Tool Name</th>
                    <th>Description</th>
                    <th>Company</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var tool in Model.MqttTools)
                {
                    <tr>
                        <td>@tool.Name</td>
                        <td>@tool.Description</td>
                        <td>@tool.Company?.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    </section>

    <section>
        <h3>MQTT Topics</h3>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Topic Template</th>
                    <th>Data Type</th>
                    <th>Associated Tool</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var topic in Model.MqttTopics)
                {
                    <tr>
                        <td>@topic.TopicTemplate</td>
                        <td>@topic.DataType</td>
                        <td>@topic.MqttTool?.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    </section>
</div>
